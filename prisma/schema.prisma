generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Album {
  id          Int     @id @default(autoincrement()) @db.UnsignedInt
  title       String

  photos      Photo[]

  user_id    Int
  user       User     @relation(fields: [user_id], references: [id])
}
model Photo {
  id          Int      @id @default(autoincrement()) @db.UnsignedInt
  title       String   
  url         String   
  comment     String? 

  album_id    Int
  album       Album   @relation(fields: [album_id], references: [id])

  user_id     Int 
  user        User    @relation(fields: [user_id], references: [id])
}

model User {
  id          Int     @id @default(autoincrement()) @db.UnsignedInt
  email       String
  password    String
  first_name  String
  last_name   String

  albums      Album[]
  photos      Photo[]
}